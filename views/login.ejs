<main>
    <style>
        body {
            font-family: "Roboto", sans-serif;
            background-image: url("data:image/svg+xml,<svg id='patternId' width='100%' height='100%' xmlns='http://www.w3.org/2000/svg'><defs><pattern id='a' patternUnits='userSpaceOnUse' width='32' height='32' patternTransform='scale(2) rotate(0)'><rect x='0' y='0' width='100%' height='100%' fill='%23000d3aff'/><path d='M37.657 10.343l-4.243 4.243m-2.828 2.828l-4.243 4.243m11.314 0l-4.243-4.243m-2.828-2.828l-4.243-4.243m-20.686 0l-4.243 4.243m-2.828 2.828l-4.243 4.243m11.314 0l-4.243-4.243m-2.828-2.828l-4.243-4.243'  stroke-linejoin='round' stroke-linecap='round' stroke-width='1' stroke='%237c6a29ff' fill='none'/><path d='M16-8v6m0 4v6m8-8h-6m-4 0H8m8 24v6m0 4v6m8-8h-6m-4 0H8'  stroke-linejoin='round' stroke-linecap='round' stroke-width='1' stroke='%237a6929ff' fill='none'/></pattern></defs><rect width='800%' height='800%' transform='translate(0,0)' fill='url(%23a)'/></svg>");
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }  
        
        .login-box {
            background-color: #000d3a;
            padding: 20px 150px;
            border: 2px solid #D1B17F;
            width: 300px;
            text-align:center;
        }

        h2 {
        color: #FFFFFF;
        }

        form {
            display: flex;
            flex-direction: column;
            justify-content: center;
            margin-top: 10%;
        }

        div {
            padding: 3%;
        }

        .info_user {
            display: flex;
            flex-direction: column;
        }

        .info_user > input {
            width: 250px;
            height: 30px;
        }

        label {
            margin-bottom: 5%;
            text-align: left;
        }

        .connect {
        padding: 10px;
        border: none;
        border-radius: 5px;
        color: #FFFFFF;
        cursor: pointer;
        }

        .button-connect {
            padding: 6%;
            display: flex;
            justify-content: center;
        }

        .button-connect > input {
            padding: 15px 40px;
            border: none;
            background-color: #D1B17F;
            color: #000d3a;
            cursor: pointer;
            font-size: 16px;
            margin: 2%;
            
        }

    </style>

    <p>
        <%= error %>
    </p>

    <body>
        <div class="login-container">
            <div class="login-box">
                <h2>Connexion</h2>
                <form action="/connexion" method="post">
                    <div class="connect">
                        <div class="info_user">
                            <label for="">Login </label>
                            <input type="text" name="login"/>
                        </div>    
            
                        <div class="info_user">    
                            <label for="">Mot de passe </label>
                            <input type="password" name="password"/>
                        </div>    
                    </div>    
                    <div class="button-connect">
                        <input type="submit" value="Se connecter"/>
                    </div>
                </form>
            </div>    
        </div>
    </body>
</main>