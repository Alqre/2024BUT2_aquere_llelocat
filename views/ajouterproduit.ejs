.login-container {
    display: flex;
    margin: 5%;
    justify-content: center;
    align-items: center;
    height: 100%;
}

.login-box {
    background-color: #000d3a;
    padding: 20px 120px;
    border: 2px solid #D1B17F;
    width: 300px;
    text-align: center;
}

form {
    display: flex;
    justify-content: center;
    box-shadow: none !important;
}

.info_user {
    display: flex;
    flex-direction: column;
    padding: 2%;
}

.info_user > input {
    width: 200px;
    height: 20px;
}
        
label {
    margin-bottom: 5%;
    text-align: left;
}

.info_row {
    display: flex;
    flex-direction: row;
}

.button-connect {
    padding: 6%;
    display: flex;
    justify-content: center;
}

.button-connect > input  {
    padding: 12px 35px;
    border: none;
    background-color: #D1B17F;
    color: #000d3a;
    text-decoration: none;
    cursor: pointer;
    font-size: 16px;
    margin: 1%;
}

</style>
    
    <main class="login-container">
        <div class="login-box"> 
            <form action="/ajouterproduit" method="POST">
                <div class="connect">   
                    <div class="info_row">    
                        <div class="info_user">
                            <label for="type">Type :</label>
                            <input type="text" id="type" name="type" required>
                        </div>
                        
                        <div class="info_user">
                            <label for="description">Description :</label>
                            <input type="text" id="description" name="description" required>
                        </div>    
                    </div>

                    <div class="info_row">    
                        <div class="info_user">
                            <label for="marque">Marque :</label>
                            <input type="text" id="marque" name="marque" required>
                        </div>
                    
                        <div class="info_user">
                            <label for="modele">Modèle :</label>
                            <input type="text" id="modele" name="modele" required>
                        </div>
                    </div>

                    <div class="info_row">    
                        <div class="info_user">
                            <label for="prix_location">Prix :</label>
                            <input type="text" id="prix_location" name="prix_location" required>
                        </div>
                    
                        <div class="info_user">
                            <label for="etat">État :</label>
                            <input type="text" id="etat" name="etat" required>
                        </div>
                    </div>
                    
                    <div class="button-connect">
                        <input type="submit" value="Ajouter un produit"/>
                    </div>
                    
                
                
                </div>    
            </form>
        </div>        
    </main>            
</body>
